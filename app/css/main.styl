@font-face
    font-family 'HelveticaNow'
    src url('./../assets/fonts/dm.ttf')
    font-weight 400

naviHeight = 32px

.helvetica, [data-font="helvetica"]
    font-family HelveticaNow !important
    font-weight 600


html, body
    padding 0
    margin 0
    position:relative;
    // overscroll-behavior none
    height 100%
    overflow-x hidden

body
    letter-spacing -1.5px
    font-size 46px
    line-height 46px
    font-family HelveticaNow
    webkit-font-smoothing antialiased
    font-smoothing grayscale
    background #000000
    overflow-x hidden
    &.l-en
        .es
            display none
        .en
            display inline

.bodySized
    letter-spacing -0.25px
    font-size 23px
    line-height 23px
    
#menu
    position absolute
    background #000000
    width 100vw
    height 100%
    overflow hidden
    transition transform 0.45s
    transform translate3d( 0vw, 0, 0 )
    z-index 10
    pointer-events none
    top 0
    left 100vw
    transition left 0.4s
    .page
        transition transform 0.45s 0.45s
    &.active
        .page
            transition transform 0.45s
    &.active
        display block
        pointer-events auto
        left 0
    ul
        margin 0
        padding 0
        list-style-type none

#mainFlow
    position absolute
    top 0
    left 0
    width 100vw
    height 100%
    overflow hidden

.navi
    position fixed
    color #ffffff
    height naviHeight
    width 100%
    z-index 100
    font-weight 600
    font-size 23px
    letter-spacing -0.75px
    .inner
        position absolute
        font-weight 600
        top 50%
        left 50%
        width calc( 100% - 40px )
        transform translate3d( -50%, -50%, 0 )
    &#header
        top 0
        .inner
            #pageTitle
                font-weight 400
                &.main
                    font-weight 600
        #menuBut
            position absolute
            right 14px
            top 6px
            width 28px
            height 28px
            background-image url( './../assets/icons.svg' )
            background-repeat no-repeat
            background-size 256px 256px
            background-position -210px -18px
            transition transform 0.2s
        &.inMenu
            #menuBut
                transform rotate( 90deg ) translate3d( -2px, 0, 0 )
    &#footer
        bottom 0
        .inner
            height 100%
        .arrow
            font-size 48px
            position absolute
            top 50%
            transform translate3d( 0, -50%, 0 )
            opacity 0
            &.right
                right 0
            &.left
                left 0
            &.menu
                pointer-events none
        &[data-navitype="blockPrev"]
            .arrow.left
                opacity 0.5
                pointer-events none
        &[data-navitype="blockNext"]
            .arrow.left
                opacity 1 !important
            .arrow.right
                opacity 0.5
                pointer-events none
        &[data-navitype="first"]
            .arrow.right
                opacity 1
        &[data-navitype="last"]
            .arrow.left
                opacity 1
        &[data-navitype="middle"]
            .arrow.right
                opacity 1 !important
            .arrow.left
                opacity 1 !important
        &[data-navitype="none"]
            .arrow.right
                opacity 0
            .arrow.left
                opacity 0
        &[data-navitype="inMenu"]
            .arrow.right
                display none
                pointer-events none
            .arrow.left
                display none
                pointer-events none
            .arrow.menu
                opacity 1
                pointer-events auto
        

.clearfix:after {
    content ""
    display table
    clear both
}
.clearfix:after
   content " " /* Older browser do not support empty content */
   visibility hidden
   display block
   height 0
   clear both



.page
    position absolute
    background #000000
    color #ffffff
    width 100vw
    height 100%
    overflow scroll
    transition transform 0.45s
    transform translate3d( 0vw, 0, 0 )
    &.record
        .loaderBox
            background #00ff00
            display block
            width calc( 100vw - 40px )
            height calc( 100vh - 80px )
            position absolute
            bottom 40px
            transform-origin 0 100%
            transform scale( 1 , 0 )
            &.animate
                animation recordProcess 6s forwards
        .recordingInstruction
            display block
        .recordingMessage
            display none
        .analyzeMessage
            display none
        .designMessage
            display none
        .recordingError
            display none
        &.recording
            .recordingInstruction
                display none
            .recordingMessage
                display block
            .analyzeMessage
                display none
        &.analyizing
            .recordingInstruction
                display none
            .recordingMessage
                display none
            .analyzeMessage
                display block
            #recordBut
                opacity 0
        &.designing
            .recordingInstruction
                display none
            .recordingMessage
                display none
            .analyzeMessage
                display none
            .designMessage
                display block
            #recordBut
                opacity 0
        &.recordingError
            .recordingInstruction
                display none
            .recordingMessage
                display none
            .analyzeMessage
                display none
            .designMessage
                display none
            .recordingError
                display block
            

    &.inlineEditor
        background none
    &.left
        transform translate3d( -100vw, 0, 0 )
    &.right
        transform translate3d( 100vw, 0, 0 )
    &.fullscreen
        .inner
            margin naviHeight 0
    .inner
        margin naviHeight + 20px 20px naviHeight + 20px 20px
    &.active
        display block
        z-index 1
    ul.optionList
        margin 0
        padding 0
        li
            border-bottom solid 1px #444444
            position relative
            padding 15px 20px
            &.selected::after
                font-family HelveticaNow
                content 'âˆš'
                position absolute
                right 20px
    &[data-pid="share"]
        ul
            list-style-type none
            margin 0
            padding 0
    &[data-pid="about"]
        ul
            list-style-type none
            margin 0
            padding 0
    &[data-pid="gallery"]
        ul
            list-style-type none
            margin 0
            padding 0
            li
                float left
                width calc( 50% - 5px )
                
                margin-left 10px
                margin-bottom 10px
                &:nth-child(odd)
                    margin-left 0
                .title
                    font-size 12px
                    line-height 14px
                    letter-spacing -0.2px
                    .util
                        float right 
                .imgCont
                    width 100%
                    margin-top 5px
                    height calc( 70vw - 25px )
                    background-size cover
                    position relative
                    .signature
                        position absolute
                        top 0
                        left 0
                        width 100%
                        height 100%
                        background-image url( './../assets/firma.png' )
                        background-size contain
                        background-position center bottom
                        background-repeat no-repeat
                    img
                        display block
            
    
#posterPreview
    position relative
    width 85vw
    height 124vw
    left 50%
    transform translate3d( -50%, -15px, 0 )
    text-align left
    background #000000
    color #ffffff
    overflow hidden
    pointer-events none
    background-image url( './../assets/firma_i.svg' )
    background-repeat no-repeat
    background-size 70%
    background-position 48% 97%
    .inner
        position absolute
        width 90%
        margin 10px
        // top 50%
        // left 50%w
        // transform translate3d( -50%, -50%, 0 )
        // background rgba( 0, 0, 0, 0.05 )
        // transition transform 0.4s
        overflow-wrap break-word

p
    &.title
        font-weight 600
    &.wlinebreaks
        white-space pre

a
    color #ffffff
    
#recordBut
    background #ff0000
    display block
    width calc( 100vw - 40px )
    height calc( 100vw - 40px )
    border-radius 1000px
    position absolute
    bottom 40px
    font-family -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif
    letter-spacing 0
    &> div
        font-size 22px 
        position absolute
        top 50%
        left 50%
        transform translate3d( -50%, -50%, 0 )
        color #ffffff
    .messageStop
        display none
    &.recording
        border-radius 0px
        .messageStop
            display block
        .messageRecord
            display none



    

#desktopwarn
    position absolute
    top 0
    left 0
    width 100vw
    height 100vh
    background #ffffff
    z-index 1000
    pointer-events none
    display none
    &.active
        display block
    .inner
        position absolute
        width 640px
        left 50%
        top 50%
        transform translate3d( -50%, -50%, 0 )
        text-align center

.en
    display none

#composerText
    position absolute
    top 0
    left 0
    z-index 100
    position absolute
    top 50%
    left 50%
    transform translate3d( -50%, -50%, 0 )
    pointer-events none
    opacity 0
    // display none
    #composerInner
        width 85vw
        height 124vw
        position relative
        left 50%
        transform translate3d( -50%, 0, 0 )
        word-break break-word
        
        // display none
#composerVector
    position relative
    z-index 200
    pointer-events none
    display none

@keyframes recordProcess
    0%
        background #ff00ff
        transform scale( 1 , 0 )
    33%
        background #00ff00
    66%
        background #0000ff
    100%
        background #ff3300
        transform scale( 1 , 0.5 )
